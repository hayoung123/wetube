mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
                input(type="range",id="video__slider" min="0" max="100" value="0")
            .videoPlayer__column
                span
                    span#currentTime 00:00:00 
                    |/
                    span#totalTime 00:00:00
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" value="0.5" step="0.1")
                span#jsFullScreen
                    i.fas.fa-expand