mixin videoPlayer(video={})
    .videoPlayer
        video(src=`${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-play
            .videoPlayer__column
            .videoPlayer__column
                span
                    |00:00 / 10:00
                span
                    i.fas.fa-volume-up
                span
                    i.fas.fa-expand